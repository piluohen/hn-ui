{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "es5",
    "module": "es2015",
    "sourceMap": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "../publish",
    "lib": ["es2015", "dom"],
    "paths": {
      "hn-ui": ["./hn-ui.module"],
      "hn-ui/*": ["./*"]
    }
  },
  "files": ["./hn-ui.module.ts"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}